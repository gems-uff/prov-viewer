<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified">
    
    <xs:element name="config" type="configuration"/>
    
    <!-- Configuration Type -->
    <xs:complexType name="configuration">
        <xs:sequence>
            <!--  -->
            <xs:element name="similarityThreshold" type="xs:decimal"/>
            <!-- The default  -->
            <xs:element name="default_error" type="xs:string"/>
            <!--  -->
            <xs:element name="attributeErrorList" type="attribute" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>
    
    <!-- Attribute threshold -->
    <xs:complexType name="attribute">
        <xs:sequence>
            <xs:element name="name" type="xs:string"/>
            <!-- Take MAX value or MEAN value for each edge type -->
            <xs:element name="value" type="xs:string"/>
            <!-- Collapse function used: True = multiplication; False = Add -->
            <xs:element name="weight" type="xs:decimal"/>
        </xs:sequence>
    </xs:complexType>

</xs:schema>
